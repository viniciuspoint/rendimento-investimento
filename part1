            double taxa = 5.3 / 100; int meses = 6 * 2;
            double valorInicial = 1000;
            double valorFinal = valorInicial * Math.Pow(1 + taxa, meses);
            Console.WriteLine($"Valor final:{valorFinal:C}");
            

            Console.ReadLine();
            // 6 meses por ano, por 2 anos 

